MIGRATIONS_PATH=./migrations


# Application Configuration
APP_NAME=Imperial
APP_ENV=development  # development, staging, production, test
APP_DEBUG=true

# Database Configuration
DATABASE_URL=postgres://imperial:imperial@localhost:5433/imperial?sslmode=disable
DB_MAX_CONNS=25
DB_MIN_CONNS=5
DB_MAX_CONN_LIFETIME=1h
DB_MAX_CONN_IDLE_TIME=30m

# JWT Configuration
# IMPORTANT: Generate TWO different strong secret keys (min 32 characters each)
# Example: openssl rand -base64 32
# SECURITY: Access and Refresh secrets MUST be different!
JWT_ACCESS_SECRET=your-access-secret-key-min-32-chars-must-be-different
JWT_REFRESH_SECRET=your-refresh-secret-key-min-32-chars-must-be-different
JWT_ACCESS_DURATION=15m
JWT_REFRESH_DURATION=168h

# Email Configuration
EMAIL_PROVIDER=console  # console or smtp

# SMTP Configuration (only required if EMAIL_PROVIDER=smtp)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@imperial.com

# Storage Configuration
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=./uploads
STORAGE_BASE_URL=http://localhost:8080/uploads

# Server Configuration
SERVER_PORT=8080
SERVER_READ_TIMEOUT=10s
SERVER_WRITE_TIMEOUT=10s
SERVER_SHUTDOWN_TIMEOUT=5s
